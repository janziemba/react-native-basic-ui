{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "paths": {
            "@ui": ["src"],
            "@ui/*": ["src/*"],
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    },
    "include": ["src"]
}
